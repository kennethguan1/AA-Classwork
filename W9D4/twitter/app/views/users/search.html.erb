<h1>Search!</h1>

<nav class="user-search">
  <label for="name">Name: 
    <input type="text" name="user[name]">
  </label>
  <ul>
    <% @users.each do |user| %>
      <li>
        <a href="<%= user_url(user) %>"><%= user.username %></a>
        <%= render 'follows/form', user: user %>
      </li>
    <% end %>
  </ul>
</nav>

